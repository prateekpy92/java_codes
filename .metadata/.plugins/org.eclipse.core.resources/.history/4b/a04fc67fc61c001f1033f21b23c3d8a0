package com.monocept.debug;

import java.util.Scanner;
import java.util.Scanner;

public class Validator {
	 static Scanner scanner = new Scanner(System.in); 
	
	 
	    public static boolean validateUsername(String username) {
	    	
	    	System.out.println("enter user name");
	    	 String username1 = scanner.nextLine();
	    	 
	        if (username1 == null || username1.isEmpty()) {
	            System.out.println("Username is null or empty.");
	            return false;
	        }
	        if (username1.length() < 3 || username1.length() > 20) {
	            System.out.println("Username length is out of range (3-20).");
	            return false;
	        }
	        return true;
	    }

	    public static boolean validatePassword(String password) {
	    	System.out.println("enter password");
	    	 String password1 = scanner.nextLine();
	        if (password1 == null || password1.isEmpty()) {
	            System.out.println("Password is null or empty.");
	            return false;
	        }
	        if (password.length() < 8 || password1.length() > 30) {
	            System.out.println("Password length is out of range (8-30).");
	            return false;
	        }
	        return true;
	    }

	    public static boolean validateEmail(String email) {
	    	System.out.println("enter email id ");
	    	 String emailid1 = scanner.nextLine();
	        if (email == null || emailid1.isEmpty()) {
	            System.out.println("Email is null or empty.");
	            return false;
	        }
	        if (emailid1.length() < 5 || emailid1.length() > 50) {
	            System.out.println("Email length is out of range (5-50).");
	            return false;
	        }
	        if (!emailid1.contains("@") || !emailid1.contains(".")) {
	            System.out.println("Email does not contain '@' or '.'.");
	            return false;
	        }
	        return true;
	    }

	    public static void main(String[] args) {
	        testValidateUsername();
	        testValidatePassword();
	        testValidateEmail();
	    }

	    public static void testValidateUsername() {
	        String[] usernames = { "validUser", null};
	        for (String username : usernames) {
	            System.out.println("Testing username: " + username);
	            boolean result = validateUsername(username);
	            System.out.println("Result: " + result + "\n");
	        }
	    }

	    public static void testValidatePassword() {
	        String[] passwords = {"validPassword123",null};
	        for (String password : passwords) {
	            System.out.println("Testing password: " + password);
	            boolean result = validatePassword(password);
	            System.out.println("Result: " + result + "\n");
	        }
	    }

	    public static void testValidateEmail() {
	        String[] emails = {"", "a@g.com", null};
	        for (String email : emails) {
	            System.out.println("Testing email: " + email);
	            boolean result = validateEmail(email);
	            System.out.println("Result: " + result + "\n");
	        }
	    }
	}
